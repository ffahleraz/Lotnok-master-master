<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.adylanroaffa.lotnok.scheduledEvent.CreateScheduleFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:src="@mipmap/back_image"
        android:backgroundTint="#80FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#bdbdbd"
            android:text="Plan your preparation"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp">
        </View>


        <TextView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#bdbdbd"
            android:text="Split into"
            android:textSize="20sp" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/split_picker"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_toRightOf="@id/repeat"
            app:np_dividerColor="@color/gray_text"
            app:np_min="1"
            app:np_max="8"
            app:np_value="3"
            app:np_dividerDistance="40dp"
            app:np_textSize="20dp"
            app:np_selectedTextSize="36dp"
            app:np_wrapSelectorWheel="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#bdbdbd"
            android:text="preparations"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </View>

        <Button
            android:id="@+id/confirm_button"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape"
            android:backgroundTint="@color/colorAccent"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:text="Next"
            android:textColor="#FFFFFF"
            />


    </LinearLayout>
</LinearLayout>
